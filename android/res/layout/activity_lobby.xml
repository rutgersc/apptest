<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mygdx.game.android.LobbyActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:text="Play"
        android:id="@+id/buttonPlayGame"
        android:alpha="255"
        android:textSize="40dp"
        android:padding="40dp"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/playerInfoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonPlayGame"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:text="0 Players nearby "
            android:id="@+id/textView"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:text="- 0 searching"
            android:id="@+id/textView2"
            android:layout_toRightOf="@+id/textView"
            android:layout_alignBottom="@+id/textView" />
    </RelativeLayout>

    <fragment
        android:id="@+id/location_map"
        class="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/playerInfoLayout"
        android:layout_above="@+id/loginInfoLayout" />

    <RelativeLayout
        android:id="@+id/loginInfoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_above="@+id/relativeLayout"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Logged in as:"
            android:id="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="-----------"
            android:id="@+id/usernameTextView"
            android:layout_toRightOf="@+id/textView3"
            android:layout_marginLeft="4dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Connecting..."
            android:id="@+id/connectedToServertextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="| debug"
            android:id="@+id/debugTextView"
            android:layout_toRightOf="@+id/connectedToServertextView"
            android:layout_marginLeft="4dp" />
    </RelativeLayout>

</RelativeLayout>
